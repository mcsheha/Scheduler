<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.paint.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>

<VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="275.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="scheduler.controller.LoginController">
   <children>
      <HBox prefWidth="200.0">
         <children>
            <Region HBox.hgrow="ALWAYS" />
            <Label text="%login" textAlignment="CENTER" textFill="#00000080" HBox.hgrow="NEVER">
               <font>
                  <Font size="37.0" />
               </font>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </Label>
            <Region HBox.hgrow="ALWAYS" />
         </children>
      </HBox>
      <VBox prefWidth="100.0">
         <children>
            <HBox prefWidth="200.0" VBox.vgrow="NEVER">
               <children>
                  <Region prefWidth="200.0" />
                  <TextField fx:id="usernameField" prefWidth="350.0" promptText="%username" HBox.hgrow="NEVER">
                     <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </padding>
                  </TextField>
                  <Region prefWidth="200.0" HBox.hgrow="ALWAYS" />
               </children>
               <padding>
                  <Insets bottom="7.0" left="7.0" right="7.0" top="7.0" />
               </padding>
            </HBox>
            <HBox prefWidth="200.0">
               <children>
                  <Region prefWidth="200.0" />
                  <PasswordField fx:id="passwordField" prefWidth="350.0" promptText="%password" HBox.hgrow="NEVER">
                     <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </padding>
                  </PasswordField>
                  <Region prefWidth="200.0" HBox.hgrow="ALWAYS" />
               </children>
               <padding>
                  <Insets bottom="7.0" left="7.0" right="7.0" top="7.0" />
               </padding>
            </HBox>
         </children></VBox>
      <HBox prefWidth="200.0">
         <children>
            <Region prefWidth="200.0" HBox.hgrow="ALWAYS" />
            <Text fill="#0e71eb80" onMouseClicked="#forgotPasswordClicked" strokeType="OUTSIDE" strokeWidth="0.0" text="%forgot" underline="true">
               <HBox.margin>
                  <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
               </HBox.margin>
            </Text>
            <Button fx:id="submit" defaultButton="true" mnemonicParsing="false" onAction="#loginToSystem" text="%submit" textFill="#000000ab">
               <HBox.margin>
                  <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
               </HBox.margin>
            </Button>
            <Region prefWidth="20.0" />
         </children></HBox>
   </children>
</VBox>
